{
  "name": "mira-markdown",
  "displayName": "Mira Markdown",
  "description": "Markdown preview with enhanced heading decorations for VS Code and Cursor",
  "version": "0.1.3",
  "publisher": "miranovastudios",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Aeonath4/mira-markdown"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "miraMarkdown.showPreview",
        "title": "MiraMarkDown: Show Preview",
        "icon": "$(open-preview)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "miraMarkdown.showPreview",
          "when": "resourceLangId == markdown",
          "group": "navigation"
        }
      ]
    },
    "configurationDefaults": {
      "[markdown]": {
        "editor.stickyScroll.enabled": false
      }
    },
    "keybindings": [
      {
        "command": "miraMarkdown.showPreview",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "resourceLangId == markdown"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "tsc --noEmit",
    "build": "tsc -p ./ && vsce package"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^25.2.3",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.7.1",
    "typescript": "^5.7.0"
  },
  "dependencies": {
    "markdown-it": "^14.1.0"
  }
}

{
  "name": "mira-markdown",
  "displayName": "Mira Markdown",
  "description": "Single-pane Markdown preview with code block syntax highlighting.",
  "version": "0.5.3",
  "publisher": "miranovastudios",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Aeonath4/mira-markdown"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "grammars": [
      {
        "scopeName": "source.lyric",
        "path": "./syntaxes/lyric.tmLanguage.json"
      },
      {
        "scopeName": "markdown.lyric.fenced",
        "path": "./syntaxes/markdown-lyric-fenced.tmLanguage.json",
        "injectTo": [
          "text.html.markdown"
        ]
      }
    ],
    "commands": [
      {
        "command": "miraMarkdown.showPreview",
        "title": "MiraMarkDown: Show Preview",
        "icon": "$(explorer-view-icon)"
      },
      {
        "command": "miraMarkdown.closePreview",
        "title": "MiraMarkDown: Close Preview",
        "icon": "$(close)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "miraMarkdown.showPreview",
          "when": "resourceLangId == markdown",
          "group": "navigation"
        }
      ],
      "webview/title": [
        {
          "command": "miraMarkdown.closePreview",
          "when": "webviewId == miraMarkdown.preview",
          "group": "navigation"
        }
      ]
    },
    "configurationDefaults": {
      "[markdown]": {
        "editor.stickyScroll.enabled": false
      }
    },
    "keybindings": [
      {
        "command": "miraMarkdown.showPreview",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "resourceLangId == markdown"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "tsc --noEmit",
    "build": "tsc -p ./ && vsce package"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^25.2.3",
    "@types/prismjs": "^1.26.6",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.7.1",
    "typescript": "^5.7.0"
  },
  "dependencies": {
    "markdown-it": "^14.1.0",
    "prismjs": "^1.30.0"
  }
}




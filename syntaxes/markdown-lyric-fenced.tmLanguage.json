{
  "scopeName": "markdown.lyric.fenced",
  "injectionSelector": "L:text.html.markdown",
  "patterns": [
    {
      "begin": "^(\\s*)(`{3,}|~{3,})\\s*lyric\\b[^`~]*$",
      "beginCaptures": {
        "1": { "name": "punctuation.whitespace.leading.markdown" },
        "2": { "name": "punctuation.definition.markdown" }
      },
      "end": "^(\\s*)(\\2)\\s*$",
      "endCaptures": {
        "1": { "name": "punctuation.whitespace.leading.markdown" },
        "2": { "name": "punctuation.definition.markdown" }
      },
      "contentName": "source.lyric",
      "patterns": [
        { "include": "source.lyric" }
      ]
    }
  ]
}
